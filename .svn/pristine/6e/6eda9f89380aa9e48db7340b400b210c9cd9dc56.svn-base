<script type="text/javascript">
    $('.update,#sortdivblock').bind('contextmenu', function (e) {
        alert("Mouse right click disabled");
        return false;
    }); 
</script>
<script type="text/javascript">

    $(document).ready(function () {

        $(".unblock").click(function (e) {
            e.preventDefault();
            $("#route").val(this.href);
            $("#modal-162").addClass('md-show');
            $("#modal-162").show();
            $("#modal-162").fadeIn();
            $(".md-overlay").fadeIn();
        });

        $('#searchBtn').click(function (e) {
            e.preventDefault();
            if ($('#SearchString').val() != "") {
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    data: { searchString: $('#SearchString').val() },
                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadingBg").hide();
                        $("#AdminLoadimg").hide();
                        $('#divPartial').html("");
                        $('#divPartial').html(result);
                    }
                });
            }
            else {
                return;
            }
            return false;
        });

        $('[data-toggle="tooltip"]').tooltip();

        $("#btnbtnYes").click(function (e) {
            e.preventDefault();
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();
            var comment = $("#txtComment").val();
            if (comment != "") {
                $('#errorComment').text('');
                $('#errorComment').hide();
                $.ajax({
                    cache: false,
                    type: 'POST',
                    url: $("#route").val(),
                    data: { comment: comment },
                    dataType: 'json',
                    success: function (data) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadingBg").hide();
                        $("#AdminLoadimg").hide();
                        $('#result1').text(data.Text);
                        $('#result1').show();
                        $("#route").val('');
                        setTimeout(function () {
                            $("#modal-162").fadeOut();
                            $(".md-overlay").fadeOut();
                            $.ajax({
                                url: "/Admin/ExpenseBlocking",
                                contentType: 'application/html; charset=utf-8',
                                type: 'GET',
                                dataType: 'html'
                            })
                            .success(function (result) {
                                $('#divPartial').html(result);
                            })
                            .error(function (xhr, status) {
                            });
                        }, 2000);

                        if (data.Available === true) {
                            $('#result1').text(data.Text);
                            $('#resul1').show();
                            $('#modelbg').hide();
                            $('#modelbg').hide();
                        }
                        else {
                            $('#result1').text(data.Text);
                            $('#result1').show();
                        }
                    },
                    failure: function () {
                        alert("fail");
                    }
                });
                $('#modal-162').removeClass('md-show');
                $("#modal-162").hide();
                $(".md-overlay").fadeOut();
                $("#route").val('');
            }
            else {
                $("#AdminLoadingBg").fadeOut();
                $("#AdminLoadingBg").hide();
                $("#AdminLoadimg").hide();
                $('#errorComment').text('Please enter Comment');
                $('#errorComment').show();
                return;
            }
        });

        $("#btnno").click(function (e) {
            $('#modal-162').removeClass('md-show');
            $("#modal-162").hide();
            $(".md-overlay").fadeOut();
            $("#route").val('');
            $("#txtComment").val('');
        });

        $("#blockclosse").click(function (e) {
            e.preventDefault();
            $("#modal-162").fadeOut();
            $(".md-overlay").fadeOut();
            $("#route").val('');
            $("#modal-162").removeClass('md-show');
            $("#modal-162").hide();
            $("#txtComment").val('');
            $('#errorComment').empty();
        });

        $('#sortdivblock').on('click', 'a', function (e) {
            e.preventDefault();
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();
            $.ajax({
                url: this.href,
                type: 'GET',
                cache: false,
                success: function (result) {
                    $("#AdminLoadingBg").fadeOut();
                    $("#AdminLoadingBg").hide();
                    $("#AdminLoadimg").hide();
                    $('#divPartial').html("");
                    $('#divPartial').html(result);
                }
            });
            return false;
        });

        $(".update").click(function (e) {
            e.preventDefault();
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();
            var redirecturl = $(this).attr('href');
            $.ajax({
                url: redirecturl,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'
            })
            .success(function (result) {
                $("#AdminLoadingBg").fadeOut();
                $("#AdminLoadingBg").hide();
                $("#AdminLoadimg").hide();
                $('#divPartial').show();
                $('#divPartial').html(result);
            })
            .error(function (xhr, status) {
            });
        });
        $('#myPagerexblock').on('click', 'a', function (e) {
            e.preventDefault();
            if (this.href != "") {
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadingBg").hide();
                        $("#AdminLoadimg").hide();
                        $('#divPartial').html("");
                        $('#divPartial').html(result);

                    }
                });
            }
        });


    });
</script>
