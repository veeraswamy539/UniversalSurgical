<script type="text/javascript">
    $(document).ready(function () {
        $(this).scrollTop(0);
        $('[data-toggle="tooltip"]').tooltip();
        $('#searchBtn').click(function (e) {
            e.preventDefault();

            if ($('#SearchString').val() != "") {
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: "/Shared/NewsList",
                    type: 'GET',
                    cache: false,
                    data: { searchString: $('#SearchString').val() },
                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadimg").hide();
                        $('#divPartial').html('');
                        $('#divPartial').empty();
                        $('#divPartial').html(result);
                    }
                });
            }
            else {
                return;
            }
            return false;
        });


        $(function () {
            $('#sortdivJobs').on('click', 'a', function (e) {
                e.preventDefault();
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: this.href,
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadimg").hide();
                        $('#divPartial').html('');
                        $('#divPartial').empty();
                        $('#divPartial').html(result);
                    }
                });
                return false;
            });
        })

        $(function () {
            $('#myPagerJobs').on('click', 'a', function (e) {
                e.preventDefault();
                if (this.href != "") {
                    $("#AdminLoadingBg").fadeIn();
                    $("#AdminLoadimg").show();

                    $.ajax({
                        url: this.href,
                        type: 'GET',
                        cache: false,
                        success: function (result) {
                            $("#AdminLoadingBg").fadeOut();
                            $("#AdminLoadimg").hide();
                            $('#divPartial').html('');
                            $('#divPartial').empty();
                            $('#divPartial').html(result);
                        }
                    });
                }
                return false;
            });
        });
        $(".update").click(function (e) {
            e.preventDefault();

            var redirecturl = $(this).attr('href');
            //        alert(redirecturl);
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();
            $.ajax({
                url: redirecturl,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'

            })
       .success(function (result) {

           $("#AdminLoadingBg").fadeOut();
           $("#AdminLoadimg").hide();
           $('#divPartial').show();
           $('#divPartial').html('');
           $('#divPartial').empty();
           //alert(result);
       
           $('#divPartial').html(result);
       })
       .error(function (xhr, status) {
           //alert("2");
       });
        });
    });
</script>
