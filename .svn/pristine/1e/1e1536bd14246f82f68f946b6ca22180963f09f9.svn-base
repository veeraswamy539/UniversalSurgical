     });
		</script>
          <![endif]-->
<script type="text/javascript">

    $(document).ready(function () {
        $(".popupposition").hide();


        $("#txtZoneName").change(function (e) {
            e.preventDefault();
            var zoneName = $('#txtZoneName').val();
            //            alert(zoneName);
            $.ajax({
                url: '/Admin/VerifyZoneName',
                type: "GET",
                data: { zoneName: zoneName },
                success: function (data) {
                    if (data >= 1) {
                        $("#txtZoneName").val("");

                        $(".popupposition").fadeIn();
                        $('#zoneerrormessage').text('Zone Name already exist, please enter new Zone');
                        $('#zoneerrormessage').show();
                        $('.popupposition').delay(3000).fadeOut('slow');
                        $('#txtZoneName').focus();

                        $('#txtZoneName').attr("value", "");


                    }
                },
                error: function (event, jqxhr, settings, exception) {
                    //                    alert(jqxhr);
                }
            });
        });


        $(".md-overlay").click(function () {
            $('#txtDesc').val('');
            $('#txtZoneName').val('');
            $('#txtZoneName-error').empty();
            $('#txtDesc-error').empty();
        });

        $(".btnClear").click(function () {
            $("#frmCreateZone").trigger('reset');

            $('#txtZoneName-error').empty();
            $('#txtDesc-error').empty();
        });

        $("#btnCreateZone1").click(function (e) {
            e.preventDefault();

          
            var zoneName = $('#txtZoneName').val();
            //alert(zoneName);
            $.ajax({
                url: '/Admin/VerifyZoneName',
                type: "GET",
                data: { zoneName: zoneName },
                success: function (data) {
                    $("#CreateZoneLoadimg").hide();
                    if (data >= 1) {
                        $("#txtZoneName").val("");
                        //                        alert(' Zone Name already exist, please enter new Zone');
                        $('#txtZoneName').focus();
                    }
                    else {
                        var valid = $("#frmCreateZone").valid();

                        if (valid) {
                            $("#CreateZoneLoadimg").show();
                            $.ajax({
                                cache: false,
                                type: 'POST',
                                url: '/Admin/CreateNewZone',
                                data: $("#frmCreateZone").serialize(),
                                dataType: 'json',
                                success: function (data) {
                                    $("#CreateZoneLoadimg").hide();
                                    $('#result').text(data.Text);
                                    $('#result').show();
                                    setTimeout(function () {

                                        $("#modal-16").fadeOut();
                                        $(".md-overlay").fadeOut();
                                        $.ajax({
                                            url: "/Admin/ZonesList",
                                            contentType: 'application/html; charset=utf-8',
                                            type: 'GET',
                                            cache: false,
                                            dataType: 'html'

                                        })
                     .success(function (result) {

                         $('#divPartial').html(result);
                     })
                      .error(function (xhr, status) {
                          // alert("2");
                      });
                                    }, 2000);

                                    if (data.Available === true) {
                                        $('#result').text(data.Text);
                                        $('#result').show();
                                        $(':input', $("#frmCreateZone"))
                                                .not(':button, :submit, :reset, :hidden')
                                                .val('')
                                                .removeAttr('selected');
                                        $('#modelbg').hide();
                                        $('#modelbg').hide();

                                    }
                                    else {
                                        $('#result').text(data.Text);
                                        $('#result').show();
                                    }

                                },
                                failure: function () {
                                    alert("fail");
                                }

                            });
                        }
                        else {
                            return;

                        }
                    }
                },
                error: function (event, jqxhr, settings, exception) {
                    //                    alert(jqxhr);
                }
            });


        });
    });
</script>
