<script type="text/javascript">

    $(document).ready(function () {
        $(this).scrollTop(0);

       
        $("#viewTraveldeskclse").click(function () {
            $("#modal-161").fadeOut();
            $(".md-overlay").fadeOut();

        });

        $(".md-overlay").click(function (e) {
            $('#modal-161').removeClass('md-show');
        });

        $('[data-toggle="tooltip"]').tooltip();
        $('#btnTravelSearch').click(function (e) {
            e.preventDefault();
//              alert('hi');
            if ($('#SearchString').val() != "") {
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: "/Shared/TravelDesk",
                    type: 'GET',
                    cache: false,
                    data: { searchString: $('#SearchString').val() },

                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadimg").hide();
                        $('#travelDiv').html('');
                        $('#travelDiv').empty();
                        $('#travelDiv').html(result);
                        $("#travellistback").show();
                    }
                });
            }
            else {
                return;
            }
            return false;
        });


        $(function () {
            $('#sortdiv').on('click', 'a', function (e) {
                e.preventDefault();
//                alert('hi');
                $("#AdminLoadingBg").fadeIn();
                $("#AdminLoadimg").show();
                $.ajax({
                    url: this.href,
                    type: 'GET',

                    cache: false,
                    success: function (result) {
                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadimg").hide();
                        $('#travelDiv').empty();
                        $('#travelDiv').html('');
                        $('#travelDiv').html(result);
                    }
                });
                return false;
            });
        })

   

        $(function () {
            $('#myPager1').on('click', 'a', function () {
               

                if (this.href != "") {
                    $("#AdminLoadingBg").fadeIn();
                    $("#AdminLoadimg").show();
                $.ajax({
                    url: this.href,
                    type: 'GET',

                    cache: false,
                    success: function (result) {

                        $("#AdminLoadingBg").fadeOut();
                        $("#AdminLoadimg").hide();
                        $('#travelDiv').html('');
                        $('#travelDiv').html(result);
                    }
                });
                return false;
           
            }
        });

    });

        $(".update").click(function (e) {
            e.preventDefault();

            $("#modal-161").fadeIn();
            $(".md-overlay").fadeIn();
            var redirecturl = $(this).attr('href');
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();

            $.ajax({
                url: this.href,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'

            })
       .success(function (result) {

           $("#AdminLoadingBg").fadeOut();
           $("#AdminLoadimg").hide();
           $('#modal-161').show();
           $('#modal-161').addClass('md-modal md-effect-16 md-show');
           // $('#divPartial').empty();
           //  $('#divPartial').val("");
           $('#divPartial').show();
           //  alert(result);
           $('#divPartial').html('');
           $('#divPartial').html(result);

       })
       .error(function (xhr, status) {
           // alert("2");
       });
        });

   $(".viewTravel").click(function (e) {
            e.preventDefault();
             var redirecturl = $(this).attr('href');
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();

            $.ajax({
                url: this.href,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'

            })
       .success(function (result) {

           $("#AdminLoadingBg").fadeOut();
           $("#AdminLoadimg").hide();
           $('#divPartial').show();
           //  alert(result);
           $('#divPartial').html('');
           $('#divPartial').html(result);

       })
       .error(function (xhr, status) {
           // alert("2");
       });
   });
        $(".updateTravel").click(function (e) {
            e.preventDefault();
            $("#AdminLoadingBg").fadeIn();
            $("#AdminLoadimg").show();
            $("#modal-161").fadeIn();
            $(".md-overlay").fadeIn();
            var redirecturl = $(this).attr('href');

            $.ajax({
                url: this.href,
                contentType: 'application/html; charset=utf-8',
                type: 'GET',
                dataType: 'html'

            })
       .success(function (result) {

           $("#AdminLoadingBg").fadeOut();
           $("#AdminLoadimg").hide();

           if (result.indexOf("Session") != -1) {
               $("#modal-161").fadeOut();
               $(".md-overlay").fadeOut();

               $('#divPartial').html('');
               $('#divPartial').html(result);
           }
           else {
               $('#modal-161').show();
               $('#modal-161').addClass('md-modal md-effect-16 md-show');

               $('#divPartialTravel').html('');
               $('#divPartialTravel').html(result);

               $('#frmUpdateTravelDesk').find('input, textarea, button, select').attr('disabled', 'disabled');
           }
         

       })
       .error(function (xhr, status) {
           $("#AdminLoadingBg").fadeOut();
           $("#AdminLoadimg").hide();
           // alert("2");
       });
        });



    });
</script>


