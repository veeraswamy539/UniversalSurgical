<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signin</title>
    @Styles.Render("~/bundles/CSS")
    <link href="../../Content/CSS/component.css" rel="stylesheet" type="text/css" />
