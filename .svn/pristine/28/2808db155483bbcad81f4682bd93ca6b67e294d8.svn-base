 <script type="text/javascript">
     $(function () {
         // Invoke the plugin
         $('input, textarea').placeholder({ customClass: 'my-placeholder' });

     });
		</script>
          <![endif]-->
<script type="text/javascript">

    $(document).ready(function () {
        $("#btnUpdateZone").click(function (e) {
            e.preventDefault();
            $("#UpdateExpenseLoadimg").show();
            var valid = $("#frmUpdateEXP").valid();
            // alert($("#frmUpdateEXP").serialize());
            if (valid) {
                $.ajax({
                    cache: false,
                    type: 'POST',
                    url: '/Admin/UpdateExpenseType',
                    data: $("#frmUpdateEXP").serialize(),
                    dataType: 'json',
                    success: function (data) {
                        $("#UpdateExpenseLoadimg").hide();
                        $('#resultupex').show();
                        $('#resultupex').text(data.Text);
                        if (data.Available === true) {
                            $('#resultupex').text(data.Text);
                            $('#resultupex').show();
                            $(':input', $("#btnUpdateZone"))
                        .not(':button, :submit, :reset, :hidden')
                        .val('')
                        .removeAttr('selected');
                            setTimeout(function () {

                                $('#modal-161').removeClass('md-show');
                                $.ajax({
                                    url: "/Admin/ExpenseType",
                                    contentType: 'application/html; charset=utf-8',
                                    type: 'GET',
                                    cache: false,
                                    dataType: 'html'

                                })
                     .success(function (result) {

                         $('#divPartial').html(result);
                     })
                      .error(function (xhr, status) {
                          // alert("2");
                      });

                            }, 7000);

                        }
                        else {
                            $('#resultupex').text(data.Text);
                            $('#resultupex').show();
                        }


                    },
                    failure: function () {
                        alert("fail");
                    }

                });
            }
            else {
                return;

            }

        });
    });
</script>
