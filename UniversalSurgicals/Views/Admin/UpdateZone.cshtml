<script type="text/javascript">

    $(document).ready(function () {
        $("#btnUpdateZone").click(function (e) {
            e.preventDefault();
            $("#UpdateZoneLoadimg").show();
            var valid = $("#frmUpdateZone").valid();
            //            alert($("#frmCreateZone").serialize());
            if (valid) {
                $.ajax({
                    cache: false,
                    type: 'POST',
                    url: '/Admin/UpdateZone',
                    data: $("#frmUpdateZone").serialize(),
                    dataType: 'json',
                    success: function (data) {
                        $("#UpdateZoneLoadimg").hide();
                        $('#result').text(data.Text);
                        if (data.Available === true) {

                            $(':input', $("#frmUpdateZone"))
                        .not(':button, :submit, :reset, :hidden')
                        .val('')
                        .removeAttr('selected');
                            $('#result1').text(data.Text);
                            $('#result1').show();
                            setTimeout(function () {
                                $('#modal-161').removeClass('md-show');
                                $.ajax({
                                    url: "/Admin/ZonesList",
                                    contentType: 'application/html; charset=utf-8',
                                    type: 'GET',
                                    cache: false,
                                    dataType: 'html'

                                })
                     .success(function (result) {

                         $('#divPartial').html(result);
                     })
                      .error(function (xhr, status) {
                          // alert("2");
                      });

                            }, 3000);
                        }
                        else {
                            $('#result').text(data.Text);
                            $('#result').show();
                        }


                    },
                    failure: function () {
                        alert("fail");
                    }

                });
            }
            else {
                return;

            }

        });
    });
</script>
